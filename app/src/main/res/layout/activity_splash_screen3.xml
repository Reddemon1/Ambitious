<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/GreenPrimary"
    tools:context=".SplashScreen3">

    <TextView
        android:id="@+id/btnskip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Skip"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Management Time"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyWithKTP"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="295dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="Never waste time for something that you wanted to be."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="38dp"
        android:backgroundTint="#070000"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_forward"
        app:iconPadding="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/btnback"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="38dp"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_back"
        app:iconPadding="15dp"
        app:iconTint="#050505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:strokeColor="#232222"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circleblack"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circleblack"
        app:layout_constraintStart_toEndOf="@+id/btnback"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/verifyWithKTP"
        android:layout_width="396dp"
        android:layout_height="280dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undraw_personal_goals_re_iow7"
        tools:layout_editor_absoluteX="-20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>